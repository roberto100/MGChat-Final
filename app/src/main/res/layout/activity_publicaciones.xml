<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.davidvelasquez.mgchat.Publicaciones">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/listViewp"
        android:layout_above="@+id/btnComentar"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="false"
        android:fastScrollEnabled="false" />

    <Button
        android:background="@mipmap/send"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnComentar"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btnF5" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextComentar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnComentar" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnF5"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/listViewp"
        android:background="@mipmap/f5" />

</RelativeLayout>
