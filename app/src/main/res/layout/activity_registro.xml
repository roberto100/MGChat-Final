<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.davidvelasquez.mgchat.Login"
    android:background="@mipmap/fondo">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Para confirmar su cuenta tiene que revisar su correo electrónico que le proporciona la Universidad"
        android:id="@+id/textView3"

        android:layout_marginTop="26dp"
        android:textSize="12dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carné"
        android:id="@+id/textView"

        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textCarneR"
        android:textSize="20dp"
        android:contentDescription="carne"
        android:textColor="#000000"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textNombreR" /><![CDATA[

    android:textSize="24dp" />

    ]]>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:id="@+id/textView4"


        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textCarneR" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:id="@+id/textNombreR"
        android:contentDescription="Nombre"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />
    android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo Electrónico"
        android:id="@+id/textView5"


        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textNombreR"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:id="@+id/textCorreoR"
        android:contentDescription="Correo"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView5" />
    android:textSize="24dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@miumg.edu.gt"
        android:id="@+id/textView6"


        android:textSize="20dp"
        android:textColor="#ffffff"

        android:layout_alignBottom="@+id/textCorreoR"
        android:layout_toEndOf="@+id/textCorreoR" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegistrar"
        android:drawableLeft="@android:drawable/ic_menu_send"
        android:background="#FF5252"
        android:textColor="#ffffff"
        android:text="Registrar  "
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView" />


</RelativeLayout>
