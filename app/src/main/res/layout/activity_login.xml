<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.davidvelasquez.mgchat.Login"
    android:background="@mipmap/fondo">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esta aplicación es de uso exclusivo para la Universidad Mariano Gálvez de Guatemala, Centro Universitario San Pedro Sacatepéquez San Marcos "
        android:id="@+id/textView3"

        android:layout_marginTop="26dp"
        android:textSize="12dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carné"
        android:id="@+id/textView"

        android:layout_marginTop="23dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textCarneR"
        android:textSize="20dp"
        android:contentDescription="carne"
        android:textColor="#000000"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textPasswordR" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:id="@+id/textView2"


        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textCarneR"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/textPasswordR"
        android:contentDescription="contraseña"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />
        android:textSize="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btniniciar"
        android:drawableLeft="@android:drawable/ic_menu_send"
        android:background="#FF5252"
        android:textColor="#ffffff"
        android:text="Iniciar  "
        android:layout_alignBottom="@+id/textPasswordR"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegistrar"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:background="#017bb3"
        android:text="Registrarse en MGchat  "
        android:textSize="10dp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />


</RelativeLayout>
