<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.davidvelasquez.mgchat.Emoticon">

    <RadioGroup
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:id="@+id/rd1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="42dp"
            android:layout_marginTop="10dp"
            android:checked="false" />

        <RadioButton
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:id="@+id/rd2"
            android:layout_below="@+id/rd1"
            android:layout_alignStart="@+id/rd1"
            android:checked="false"
            android:layout_marginTop="15dp" />

        <RadioButton
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:id="@+id/rd3"
            android:layout_below="@+id/rd2"
            android:layout_alignStart="@+id/rd2"
            android:checked="false"
            android:layout_marginTop="20dp" />

        <RadioButton
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:id="@+id/rd4"
            android:layout_below="@+id/rd3"
            android:layout_alignStart="@+id/rd3"
            android:checked="false"
            android:layout_marginTop="20dp" />

        <RadioButton
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:id="@+id/rd5"
            android:layout_below="@+id/rd4"
            android:layout_alignStart="@+id/rd4"
            android:checked="false"
            android:layout_marginTop="20dp" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAceptar"
        android:drawableLeft="@mipmap/ok"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="Aceptar" />


    <ImageView
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:id="@+id/imageView3"
        android:background="@mipmap/emo1" />

    <ImageView
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:id="@+id/imageView4"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:background="@mipmap/emo2" />

    <ImageView
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:id="@+id/imageView5"
        android:background="@mipmap/emo3"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:id="@+id/imageView6"
        android:background="@mipmap/emo4"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@mipmap/emo5"
        android:layout_alignBottom="@+id/radioGroup"
        android:layout_alignParentStart="true" />


</RelativeLayout>
